{
  "name": "ezrspec",
  "displayName": "ezrspec",
  "description": "Run rspec directly from editor",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": ["onLanguage:ruby"],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ezrspec.runRspecOnCurrentLine",
        "title": "Run Rspec on current line"
      },
      {
        "command": "ezrspec.runRspecOnCurrentFile",
        "title": "Run Rspec on current file"
      }
    ],
    "submenus": [
      {
        "id": "ezrspecSubmenu",
        "label": "EZRspec"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorTextFocus && editorLangId == 'ruby' && ezrspec:isSpecFile",
          "group": "navigation",
          "submenu": "ezrspecSubmenu"
        }
      ],
      "ezrspecSubmenu": [
        {
          "command": "ezrspec.runRspecOnCurrentLine"
        },
        {
          "command": "ezrspec.runRspecOnCurrentFile"
        }
      ]
    },
    "languages": [
      {
        "id": "ruby",
        "extensions": [".rb", ".ruby"],
        "aliases": ["Ruby","rb"]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.104.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.34.0",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
